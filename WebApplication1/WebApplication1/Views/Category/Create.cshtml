@model Category
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Create Category</h2>
            <hr />
        </div>

        <div class="mb-3">
                <label asp-for="name"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <span id="er"></span>

        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <span id="er"></span>

        
        <button type="submit" class="btn btn-primary btn1" style="width:100px" onclick="validate()"> Create </button>
        <button class="btn btn-secondary" asp-controller="Category" asp-action="index" style="width:150px">Back to list</button>
    </div>
</form>